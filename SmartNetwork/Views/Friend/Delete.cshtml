@using SmartNetwork.Core.Application.ViewModel.Friends
@model SaveFriendViewModel

@{
    ViewData["Title"] = "Delete Post";
}

<div class="container-fluid">
              <div class="row d-flex justify-content-center">
                      <div class="col-6 mt-2 mb-3">
            <div class="card rounded-0">
                <div class="card-header card-header-pills bg-custom">
                   <h2 class="text-center fw-bold text-white">Delete Friend</h2>
                </div>
                <div class="card-body">
                    <form method="post" asp-action="Delete" asp-controller="Friend">
                            <div class="row">
                <div class="col-12 mt-2 mb-3">
                            <div class="panel mt-2 mb-3 w-auto h-auto rounded bg-danger text-white">
                              <div class="panel-body">
                                  ¿Are you sure you want to delete this friend?
                              </div>
                            </div>
                        </div>
                        </div>
                        <a asp-action="Index" asp-controller="Friend" class="btn btn-primary float-end mt-3 mb-3 w-25">Cancel</a>
                        <button type="submit" class="btn btn-danger float-end mt-3 mb-3 w-25">Delete</button>
                    </form>
                </div>
            </div>
        </div>
          </div>
</div>
