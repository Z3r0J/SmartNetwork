@using SmartNetwork.Core.Application.ViewModel.Users

@model LoginViewModel

@{
    ViewData["Title"] = "Login";
}
<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Change Password</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
          <div class="row">
              <div class="col-12">
                  <div class="card">
                      <div class="card-body">
                        <form method="post" asp-action="ChangePassword" asp-controller="User">
                            <label for="username">Usuario: </label>
                            <input type="text" class="form-control mb-2" name="username" id="username"/>
                                <button type="submit" class="btn btn-primary float-end">Changes</button>
                        </form>
                      </div>
                  </div>
              </div>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
      </div>
    </div>
  </div>
</div>

<section class="min-vh-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col col-xl-10">
        <div class="card card-border border-primary" style="border-radius: 1rem;">
          <div class="row g-0">
            <div class="col-md-6 col-lg-5 d-none d-md-block">
              <img src="~/Images/bg-social.jpg"
                alt="login form" class="img-fluid" style="border-radius: 1rem 0 0 1rem;" />
            </div>
            <div class="col-md-6 col-lg-7 d-flex align-items-center">
              <div class="card-body p-4 p-lg-5 text-dark">

                <form method="post" asp-action="Index" asp-controller="User">
                    @if(!string.IsNullOrEmpty(ViewBag.ActivationMessage)){<div class="alert alert-success w-100"><span>@ViewBag.ActivationMessage</span></div>}
                    @if(!string.IsNullOrEmpty(ViewBag.ErrorActivation)){<div class="alert alert-danger w-100"><span>@ViewBag.ErrorActivation</span></div>}

                  @Html.ValidationSummary(false,"",new{@class="text-danger"})
                  <div class="d-flex align-items-center mb-3 pb-1">
                    <img src="https://i.imgur.com/wRkWJvg.png" style="width:150px;"/>
                  </div>

                  <h5 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px;">Welcome Back!</h5>

                  <div class="form-outline mb-4">
                    <label class="form-label" asp-for="Username">Username</label>
                    <input asp-for="Username" class="form-control" />

                  </div>

                  <div class="form-outline mb-4">
                    <label class="form-label" asp-for="Password">Password</label>
                    <input asp-for="Password" class="form-control" />

                  </div>

                  <div class="pt-1 mb-4">
                    <button class="btn btn-custom btn-lg w-100" type="submit">Login</button>
                  </div>
                  <p class="mb-3 pb-lg-2 text-center">Did you forget your password?</p>
                  <p class="mb-2 pb-lg-2 text-center">Don't have an account? <a asp-action="Register" asp-controller="User" class="text-price text-decoration-none">Register here</a></p>
                </form>

              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>