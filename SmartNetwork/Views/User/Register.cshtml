@using SmartNetwork.Core.Application.ViewModel.Users
@model SaveUserViewModel

@{
    ViewData["Title"] = "Register";
}
<script src="~/lib/jquery/dist/jquery.js"></script>
<script src="~/lib/jquery/dist/jquery.inputmask.min.js"></script>
<script type="text/javascript">
$(document).ready(function($) {
    $('#phone').inputmask("+1 999-999-9999");
});
</script>

<div class="container-fluid">
    <div class="row">
        <div class="col-md-6 offset-3">
            <div class="card card-border border-primary">
                <div class="card-body">
                    <h2 class="card-title">Register</h2>
                    <form method="post" asp-action="Register" asp-controller="User" enctype="multipart/form-data">
                        <div class="row">
                            <div class="col-6 mt-1 mb-3">
                                <label asp-for="Name">Name:</label>
                                <input asp-for="Name" class="form-control"/>
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                            <div class="col-6 mt-1 mb-3">
                                <label asp-for="LastName">LastName:</label>
                                <input asp-for="LastName" class="form-control"/>
                                <span asp-validation-for="LastName" class="text-danger"></span>
                            </div>
                        </div>
                         <div class="row">
                            <div class="col-6 mt-1 mb-3">
                                <label asp-for="Email">Email:</label>
                                <input asp-for="Email" class="form-control"/>
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                            <div class="col-6 mt-1 mb-3">
                                <label asp-for="Phone">Phone:</label>
                                <input asp-for="Phone" class="form-control" id="phone"/>
                                <span asp-validation-for="Phone" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-6 mt-1 mb-3">
                                <label asp-for="Username">UserName:</label>
                                <input asp-for="Username" class="form-control"/>
                                <span asp-validation-for="Username" class="text-danger"></span>
                            </div>
                            <div class="col-6 mt-1 mb-3">
                                <label asp-for="File">Photo:</label>
                                <input asp-for="File" class="form-control" required />
                                <span asp-validation-for="File" class="text-danger"></span>
                            </div>
                        </div>
                       <div class="row">
                            <div class="col-6 mt-1 mb-3">
                                <label asp-for="Password">Password:</label>
                                <input asp-for="Password" class="form-control"/>
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                            <div class="col-6 mt-1 mb-3">
                                <label asp-for="ConfirmPassword">Confirm Password:</label>
                                <input asp-for="ConfirmPassword" class="form-control"/>
                                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-5 d-flex justify-content-between float-end">
                            <button type="submit" class="btn btn-primary w-100">Register</button>
                            <a asp-action="Index" asp-controller="User" class="btn btn-danger w-100">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>