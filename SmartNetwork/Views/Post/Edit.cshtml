@using SmartNetwork.Core.Application.ViewModel.Posts
@model SavePostViewModel

@{
    ViewData["Title"] = "Edit Post";
}

<div class="container-fluid">
              <div class="row d-flex justify-content-center">
                      <div class="col-7 mt-2 mb-3">
            <div class="card rounded-0">
                <div class="card-header card-header-pills bg-custom">
                   <h2 class="text-center fw-bold text-white">Edit Post</h2>
                </div>
                <div class="card-body">
                    <form method="post" enctype="multipart/form-data" asp-action="Edit" asp-controller="Post">
                        <div class="row">
                            <div class="col-8">
                                <label class="form-label card-text fs-5">Body:</label>
                                <textarea class="form-control" asp-for="Body"></textarea>
                                <span class="text-danger" asp-validation-for="Body"></span>
                            </div>
                            <div class="col-4">
                                <label class="form-label card-text fs-5">Image (Optional):</label>
                                <input type="file" asp-for="Image" class="form-control"/>
                                <input type="hidden" asp-for="PictureUrl" class="form-control" />
                                <input type="hidden" asp-for="Id" class="form-control" />
                                <input type="hidden" asp-for="UserId" class="form-control" />
                            </div>
                        </div>
                        <button type="submit" class="btn btn-primary float-end mt-3 mb-3 w-25">Edit</button>
                    </form>
                </div>
            </div>
        </div>
          </div>
</div>